{
	"pluginAlias": "PalGatePlatform",
	"pluginType": "platform",
	"singular": true,
	"customUi": true,
	"schema": {
	  "token": {
		"title": "Session Token",
		"type": "string",
		"description": "Leave empty to generate via linking flow"
	  },
	  "phoneNumber": {
		"title": "Phone Number",
		"type": "string",
		"description": "Your account's phone number (e.g., 972500000000)."
	  },
	  "tokenType": {
		"title": "Token Type",
		"type": "number",
		"enum": [0, 1, 2],
		"description": "0 for SMS, 1 for Primary, or 2 for Secondary linking"
	  },
	  "accessoryType": {
		"title": "Default Accessory Type",
		"type": "string",
		"default": "garageDoor",
		"oneOf": [
		  { "title": "Garage Door", "enum": ["garageDoor"] },
		  { "title": "Switch", "enum": ["switch"] }
		]
	  },
	  "customGates": {
		"title": "Custom Gate Settings",
		"description": "Optional overrides for individual gates.",
		"type": "array",
		"items": {
		  "type": "object",
		  "properties": {
			"deviceId": { "title": "Gate ID", "type": "string" },
			"name": { "title": "Custom Gate Name", "type": "string" },
			"garageDoor": { "title": "Expose as Garage Door", "type": "boolean" },
			"switch": { "title": "Expose as Switch", "type": "boolean" },
			"hide": { "title": "Hide Gate", "type": "boolean" }
		  }
		}
	  }
	},
	"layout": [
	  {
		"type": "flex",
		"flex-flow": "row wrap",
		"items": ["token", "phoneNumber", "tokenType"]
	  },
	  "accessoryType",
	  "customGates",
	  {
		"type": "button",
		"title": "Link Device",
		"action": "command",
		"command": "link",
		"description": "Click to initiate device linking and generate a QR code."
	  }
	]
  }